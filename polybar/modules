[module/spotify]
type = custom/script
tail = true
;format-prefix = "  "
;format-prefix-foreground = ${color.cyan}
format = <label>
label = %output:0:40:...%
exec = ~/.config/polybar/scripts/spotify_status.sh
click-left = "playerctl play-pause"

[module/spotify_prev]
type = custom/script
format-font = 1
format-padding = 2
format-foreground = ${color.fg}
exec = echo " "
exec-if = "pgrep spotify"
click-left = "playerctl previous"

[module/spotify_next]
type = custom/script
format-font = 1
format-padding = 2
format-foreground = ${color.fg}
exec = echo " "
exec-if = "pgrep spotify"
click-left = "playerctl next"

